{
  "name": "api",
  "version": "1.0.0",
  "description": "Modern Node.js backend server",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/index.ts",
    "build": "tsc",
    "start": "node --env-file=.env dist/index.js",
    "check-types": "tsc --noEmit",
    "clean": "rimraf dist",
    "lint": "tsc --noEmit && eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/express": "^5.0.1",
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@repo/db": "workspace:*",
    "@types/cors": "^2.8.17",
    "better-auth": "^1.2.4",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "nanoid": "^5.1.5",
    "zod": "^3.24.2"
  }
}
